extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box


        //- Use interpolation to dynamically add the project title
        h1= `${project.project_name}`

        //- Use interpolation to dynamically add the project description
        p= `${project.description}`

      .project-tech-links-box.box
        h6 Technologies
        ul
          //- Use an `each` iterator and interpolation to dynamically replace the li tags below with the technologies listed for this project
          each technology in project.technologies 
            li= technology

        //- Add the href values to the links below
        a.btn-link(href=project.live_link) Live Demo
        a.btn-link(href=project.github_link) GitHub Repo

    .project-img-box.box

      //- I tried a few different things here but nothing worked
   

      img.project-img(src=project.image_urls[0], alt='')
      img.project-img(src=project.image_urls[1], alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
